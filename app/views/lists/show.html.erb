<p>
  <strong>Name:</strong>
  <%= @list.name %>

  <%= link_to 'add a movie', new_list_bookmark_path(@list), class: 'btn btn-flat' %>
  <%= link_to 'detete this list', list_path(@list), method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
  <%= link_to "go back", lists_path(@list) %>

 <div>
    <% @list.movies.each do |movie| %>
      <% bookmark = Bookmark.find_by(list: @list, movie: movie) %>
      <div>
        <div>
          <%= movie.title %>
          <%= movie.overview %>
          <%= bookmark.comment %>
        </div>
        <%= link_to 'delete', bookmark_path(bookmark), method: :delete, data: { confirm: "Remove #{movie.title} from #{@list.name} list?"} %>
      </div>
    <% end %>
  </div>
</p>
